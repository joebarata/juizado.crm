# juizado.com - Hostinger Production Config
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # 1. Forçar HTTPS
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # 2. Roteamento de API para Node.js (Porta 3001)
    # Garante que /api/* vá para o processo backend
    RewriteCond %{REQUEST_URI} ^/api [NC]
    RewriteRule ^api/(.*)$ http://localhost:3001/api/$1 [P,L]

    # 3. Suporte SPA (Single Page Application)
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule . /index.html [L]
</IfModule>

# 4. Correção Crítica de MIME Types (Resolve erro de carregamento de scripts .tsx/.ts)
<IfModule mod_mime.c>
    AddType application/javascript .js .jsx .ts .tsx
    AddType application/json .json
</IfModule>

# 5. Segurança e CORS
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    
    # Cache de Estáticos para Performance
    <FilesMatch "\.(ico|pdf|flv|jpg|jpeg|png|gif|js|css|swf|svg)$">
        Header set Cache-Control "max-age=2592000, public"
    </FilesMatch>
</IfModule>

# 6. Compressão para Performance
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain text/html text/xml text/css application/xml application/xhtml+xml application/rss+xml application/javascript application/x-javascript application/json
</IfModule>