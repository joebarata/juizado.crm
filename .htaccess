# juizado.com - Hostinger Production Config
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # 1. Forçar HTTPS para segurança SaaS
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # 2. Roteamento de API para Node.js (Porta 3001)
    # Garante que chamadas /api/* sejam capturadas pelo backend
    RewriteCond %{REQUEST_URI} ^/api [NC]
    RewriteRule ^api/(.*)$ http://localhost:3001/api/$1 [P,L]

    # 3. Suporte SPA (Single Page Application)
    # Evita 404 ao recarregar rotas do React
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule . /index.html [L]
</IfModule>

# 4. Correção Crítica de MIME Types (Resolve Erro de carregamento de scripts .tsx/.ts)
# Força o Apache a entregar os arquivos como módulos JavaScript
<IfModule mod_mime.c>
    AddType application/javascript .js .jsx .ts .tsx
    AddType application/json .json
</IfModule>

# 5. Segurança e Cache de Performance
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    
    <FilesMatch "\.(ico|pdf|flv|jpg|jpeg|png|gif|js|css|swf|svg)$">
        Header set Cache-Control "max-age=2592000, public"
    </FilesMatch>
</IfModule>

# 6. Compressão Gzip
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain text/html text/xml text/css application/javascript application/json
</IfModule>